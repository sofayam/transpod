<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <style>
        * {
            box-sizing: border-box;
            tap-highlight-color: transparent;
        }
        body {
            font-family: system-ui, -apple-system, 'Segoe UI', Roboto, sans-serif;
            margin: 0;
            padding: 15px;
            line-height: 1.5;
            font-size: 16px;
            color: #333;
            -webkit-text-size-adjust: 100%;
            background-color: #f8f8f8;
        }
        h1 {
            font-size: 20px;
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 1px solid #e0e0e0;
        }
        .search-form {
            margin-bottom: 20px;
        }
        .search-form input[type="text"], .search-form select {
            padding: 8px;
            border-radius: 4px;
            border: 1px solid #ccc;
            margin-right: 10px;
        }
        .search-form button {
            padding: 8px 12px;
            border-radius: 4px;
            border: none;
            background-color: #007bff;
            color: white;
            cursor: pointer;
        }
        ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        li {
            background: #f9f9f9;
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            margin-bottom: 10px;
            padding: 12px;
        }
        a {
            text-decoration: none;
            color: #0066cc;
            transition: color 0.2s;
        }
        li > a:first-child {
            display: block;
            font-weight: bold;
            font-size: 17px;
            margin-bottom: 5px;
        }
        li > a:not(:first-child) {
            color: #666;
            font-size: 14px;
            display: inline-block;
            margin-right: 10px;
        }
        a:hover, a:active {
            color: #004080;
        }
        mark {
            background-color: #fcf8e3;
            padding: 2px 4px;
            border-radius: 3px;
        }
        #loader {
            display: none;
            font-size: 18px;
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <h1>Search Transcripts</h1>

    <form action="/search" method="get" class="search-form">
        <input type="text" id="query" name="query" value="{{query}}" placeholder="Search for...">
        <select id="language" name="language">
            {{#each languages}}
                <option value="{{this}}" {{#if (eq this ../language)}}selected{{/if}}>{{this}}</option>
            {{/each}}
        </select>
        <button type="submit">Search</button>
    </form>

    <div id="loader">Searching... ‚è≥</div>

    {{#if results}}
        <h2>Results for "{{query}}" in language "{{language}}"</h2>
        {{#if results.length}}
            <ul>
                {{#each results}}
                    <li>
                        {{#if (gt hits.length 1)}}
                            <details>
                                <summary>
                                    <strong>Podcast:</strong> {{podcast}}<br>
                                    <strong>Episode:</strong> <a href="/play/{{podcast}}/{{encodedFile}}">{{file}}</a> ({{hits.length}} hits)
                                </summary>
                                <ul>
                                    {{#each hits}}
                                        <li style="margin-left: 20px; margin-top: 10px;">
                                            <a href="/play/{{../podcast}}/{{../encodedFile}}?t={{start}}">({{formatTimestamp start}})</a>
                                            {{{text}}}
                                        </li>
                                    {{/each}}
                                </ul>
                            </details>
                        {{else}}
                            <strong>Podcast:</strong> {{podcast}}<br>
                            <strong>Episode:</strong> <a href="/play/{{podcast}}/{{encodedFile}}?t={{hits.0.start}}">{{file}}</a><br>
                            <strong>Text:</strong> {{{hits.0.text}}}
                        {{/if}}
                    </li>
                {{/each}}
            </ul>
        {{else}}
            <p>No results found.</p>
        {{/if}}
    {{/if}}

    <script>
        document.querySelector('.search-form').addEventListener('submit', function() {
            document.getElementById('loader').style.display = 'block';
        });
    </script>
</body>
</html>
