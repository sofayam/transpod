<!DOCTYPE html>
<html>
<head>
    <title>Search Word</title>
    <style>
        body { font-family: sans-serif; margin: 20px; }
        form { margin-bottom: 20px; }
        input[type="text"] { padding: 8px; width: 300px; }
        input[type="submit"] { padding: 8px 15px; background-color: #007bff; color: white; border: none; cursor: pointer; }
        details.podcast-group { border: 1px solid #ccc; margin-bottom: 15px; padding: 10px; border-radius: 5px; }
        details.episode-group { border-left: 3px solid #007bff; padding-left: 10px; margin-top: 10px; }
        summary { cursor: pointer; }
        summary h3, summary h4 { display: inline; margin: 0; }
        .segment { margin-bottom: 5px; }
        .segment-time { font-weight: bold; color: #555; }
        mark { background-color: yellow; }
    </style>
</head>
<body>
    <script>
      window.onload = function(){
      const topBtn = document.getElementById("top");
      topBtn.addEventListener("click", () => {
            localStorage.setItem("lastPage", "")
            window.location.href = "/"
        });
      }
    </script>

    Return to podcast list: <button id="top">‚è´</button>

    <h1>Search for a Word in Transcripts</h1>

    <form action="/searchword" method="post">
        <label for="word">Word:</label>
        <input type="text" id="word" name="word" value="{{query}}" placeholder="Enter word to search">
        <input type="submit" value="Search">
    </form>

    {{#if message}}
        <p style="color: red;">{{message}}</p>
    {{/if}}

    {{#if results}}
        <h2>Search Results for "{{query}}"</h2>
        {{#if results.length}}
            {{#each results}}
                <details class="podcast-group">
                    <summary><h3>Podcast: {{podcastName}}</h3></summary>
                    {{#each episodes}}
                        <details class="episode-group">
                            <summary><h4>Episode: {{episodeName}}</h4></summary>
                            {{#each segments}}
                                <div class="segment">
                                    <span class="segment-time">{{formatTimestamp start}} - {{formatTimestamp end}}:</span>
                                    <a href="{{playUrl}}">{{{text}}}</a>
                                </div>
                            {{/each}}
                        </details>
                    {{/each}}
                </details>
            {{/each}}
        {{else}}
            <p>No results found for "{{query}}".</p>
        {{/if}}
    {{/if}}

    <script>
        // Helper function for formatting timestamp (if not already available via Handlebars helper)
        function formatTimestamp(totalSeconds) {
            const minutes = Math.floor(totalSeconds / 60);
            const seconds = Math.floor(totalSeconds % 60);
            return `${minutes}:${String(seconds).padStart(2, '0')}`;
        }
    </script>
</body>
</html>