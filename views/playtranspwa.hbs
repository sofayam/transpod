        // Example: Register service worker
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/service-worker.js')
                    .then(registration => {
                        console.log('Service Worker registered with scope:', registration.scope);
                    })
                    .catch(error => {
                        console.error('Service Worker registration failed:', error);
                    });
            });
        }
        
        // Example: Update status indicators dynamically
        function updateStatusIndicators() {
            // In a real app, these would be actual checks
            const isOnline = navigator.onLine;
            document.querySelector('.status-item:nth-child(1) span').textContent = 
                `Network: ${isOnline ? 'Online' : 'Offline'}`;
            
            // Battery API example (would need permissions)
            if ('getBattery' in navigator) {
                navigator.getBattery().then(battery => {
                    const level = Math.floor(battery.level * 100);
                    document.querySelector('.status-item:nth-child(2) span').textContent = 
                        `Battery: ${level}%`;
                });
            }
            
            // Update timestamp
            document.querySelector('.status-item:nth-child(4) span').textContent = 
                `Last updated: Just now`;
        }
        
        // Call once on load
        updateStatusIndicators();
        
        // Set up periodic refresh
        setInterval(updateStatusIndicators, 60000); // Update every minute
