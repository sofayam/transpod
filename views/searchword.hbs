    <h1>Search for a Word in Transcripts</h1>

    <form action="/searchword" method="post">
        <label for="word">Word:</label>
        <input type="text" id="word" name="word" value="{{query}}" placeholder="Enter word to search">
        <input type="submit" value="Search">
    </form>

    {{#if message}}
        <p style="color: red;">{{message}}</p>
    {{/if}}

    {{#if results}}
        <h2>Search Results for "{{query}}"</h2>
        {{#if results.length}}
            {{#each results}}
                <details class="podcast-group">
                    <summary><h3>Podcast: {{podcastName}}</h3></summary>
                    {{#each episodes}}
                        <details class="episode-group">
                            <summary><h4>Episode: {{episodeName}}</h4></summary>
                            {{#each segments}}
                                <div class="segment">
                                    <span class="segment-time">{{formatTimestamp start}} - {{formatTimestamp end}}:</span>
                                    <a href="{{playUrl}}">{{{text}}}</a>
                                </div>
                            {{/each}}
                        </details>
                    {{/each}}
                </details>
            {{/each}}
        {{else}}
            <p>No results found for "{{query}}".</p>
        {{/if}}
    {{/if}}

    <script>
    const searchInput = document.getElementById('word');
    const resultsContainer = document.createElement('div');
    resultsContainer.id = 'autocomplete-results';
    searchInput.parentNode.insertBefore(resultsContainer, searchInput.nextSibling);

    searchInput.addEventListener('input', () => {
        const query = searchInput.value;
        if (query.length < 1) {
            resultsContainer.innerHTML = '';
            return;
        }

        fetch(`/autocomplete?q=${query}`)
            .then(response => response.json())
            .then(data => {
                resultsContainer.innerHTML = '';
                if (data.length > 0) {
                    const list = document.createElement('ul');
                    data.forEach(word => {
                        const listItem = document.createElement('li');
                        listItem.textContent = word;
                        listItem.addEventListener('click', () => {
                            searchInput.value = word;
                            resultsContainer.innerHTML = '';
                        });
                        list.appendChild(listItem);
                    });
                    resultsContainer.appendChild(list);
                }
            });
    });

    // Hide autocomplete results when clicking outside
    document.addEventListener('click', (event) => {
        if (!resultsContainer.contains(event.target) && event.target !== searchInput) {
            resultsContainer.innerHTML = '';
        }
    });

        // Helper function for formatting timestamp (if not already available via Handlebars helper)
        function formatTimestamp(totalSeconds) {
            const minutes = Math.floor(totalSeconds / 60);
            const seconds = Math.floor(totalSeconds % 60);
            return `${minutes}:${String(seconds).padStart(2, '0')}`;
        }
    </script>
</body>
</html>